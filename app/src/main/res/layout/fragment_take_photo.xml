<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ru.courier.office.views.TakePhotoFragment">

    <RelativeLayout
        android:id="@+id/lnlScan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:background="@color/appBackground"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivPrev"
            android:layout_width="48dp"
            android:layout_height="@dimen/dimen48"
            android:layout_marginTop="@dimen/dimen4"
            android:layout_marginBottom="@dimen/dimen4"
            android:layout_alignParentLeft="true"
            android:src="@drawable/ic_prev"
            android:tint="@color/white" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_marginLeft="@dimen/dimen48"
            android:layout_marginRight="@dimen/dimen48"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="tvTitle"
            android:maxLines="2"
            android:textSize="@dimen/title_text_size"
            android:textColor="@android:color/white" />

        <ImageView
            android:id="@+id/ivNext"
            android:layout_width="48dp"
            android:layout_height="@dimen/dimen48"
            android:layout_marginTop="@dimen/dimen4"
            android:layout_marginBottom="@dimen/dimen4"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_next"
            android:tint="@color/white" />

    </RelativeLayout>

    <com.google.android.cameraview.CameraView
        android:id="@+id/cvCamera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:layout_marginTop="@dimen/dimen56"
        android:keepScreenOn="false"
        app:aspectRatio="4:3"
        app:autoFocus="true"
        app:facing="back"
        app:flash="auto" />

    <ImageView
        android:id="@+id/grid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="160dp"
        android:layout_marginTop="80dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_grid" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rlTakePhoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/rounded_rect">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_camera"
                android:tint="@color/white" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlFlash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_margin="@dimen/dimen8">

            <ImageView
                android:id="@+id/flashIcon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentLeft="true"
                android:src="@drawable/ic_flash_auto"
                android:tint="@color/white" />
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>
