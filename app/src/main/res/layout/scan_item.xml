<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="@dimen/dimen5"
        android:elevation="3dp"
        card_view:cardCornerRadius="@dimen/dimen0">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/ivScan"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen160"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ivScan"
                android:paddingLeft="@dimen/dimen10"
                android:paddingRight="@dimen/dimen10"
                android:paddingTop="@dimen/dimen10"
                android:textColor="@color/grey4"
                android:textSize="@dimen/dimen16" />

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvTitle"
                android:paddingBottom="@dimen/dimen5"
                android:paddingLeft="@dimen/dimen10"
                android:paddingRight="@dimen/dimen10"
                android:textSize="@dimen/dimen12" />

            <ImageView
                android:id="@+id/ivMenu"
                android:layout_width="@dimen/dimen20"
                android:layout_height="@dimen/dimen30"
                android:layout_alignParentRight="true"
                android:layout_below="@id/ivScan"
                android:layout_marginTop="@dimen/dimen10"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_dots" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>