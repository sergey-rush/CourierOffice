<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:padding="@dimen/dimen16"
    tools:context="ru.courier.office.views.ApplicationFragment">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="3dp">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/dimen16">

        <TextView
            android:id="@+id/tvIdTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="Заявка №" />

        <TextView
            android:id="@+id/tvId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvIdTitle"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen16" />

        <TextView
            android:id="@+id/tvMerchantNameTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvId"
            android:text="Магазин" />

        <TextView
            android:id="@+id/tvMerchantName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvMerchantNameTitle"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen16" />

        <TextView
            android:id="@+id/tvPersonNameTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvMerchantName"
            android:text="Заемщик" />

        <TextView
            android:id="@+id/tvPersonName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvPersonNameTitle"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen16" />

        <TextView
            android:id="@+id/tvAmountTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvPersonName"
            android:text="Сумма" />

        <TextView
            android:id="@+id/tvAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvAmountTitle"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen16" />

        <TextView
            android:id="@+id/tvDeliveryAddressTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvAmount"
            android:text="Адрес:" />

        <TextView
            android:id="@+id/tvDeliveryAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvDeliveryAddressTitle"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen16" />

        <TextView
            android:id="@+id/tvCreatedTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvDeliveryAddress"
            android:text="Дата заявки:" />

        <TextView
            android:id="@+id/tvCreated"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvCreatedTitle"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen16" />

        <ImageView
            android:id="@+id/ivMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_menu" />

    </RelativeLayout>

    </android.support.v7.widget.CardView>

</FrameLayout>
