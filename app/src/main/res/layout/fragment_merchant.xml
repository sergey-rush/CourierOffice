<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ru.courier.office.views.MerchantFragment">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="3dp">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/dimen16"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Магазин №" />

            <TextView
                android:id="@+id/tvMerchantId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="tvMerchantId" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Магазин" />

            <TextView
                android:id="@+id/tvMerchantName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="tvMerchantName" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ИНН" />

            <TextView
                android:id="@+id/tvInn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="tvInn" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Почта" />

            <TextView
                android:id="@+id/tvEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="tvEmail" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Сайт:" />

            <TextView
                android:id="@+id/tvSite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="tvSite" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Менеджер" />

            <TextView
                android:id="@+id/tvManagerName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="tvManagerName" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Телефон" />

            <TextView
                android:id="@+id/tvManagerPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="tvManagerPhone" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</FrameLayout>
